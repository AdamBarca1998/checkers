<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rooms"
    tools:context=".activitys.Player2PreActivity">

    <TextView
        android:id="@+id/player1PrePlayers2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="@string/player1"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player2PrePlayers2" />

    <TextView
        android:id="@+id/player2PrePlayers2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="@string/player2"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startPrePlayers2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF"
        android:text="@string/start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/whitePlayer2PrePlayers2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="#00000000"
        android:contentDescription="@string/clear"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/player1PrePlayers2"
        app:layout_constraintEnd_toStartOf="@+id/randomPlayer2PrePlayers2"
        app:layout_constraintStart_toEndOf="@+id/player2PrePlayers2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036"
        app:srcCompat="@drawable/ic_white_chip" />

    <ImageButton
        android:id="@+id/whitePlayer1PrePlayers2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="50dp"
        android:background="#00000000"
        android:contentDescription="@string/clear"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/randomPlayer1PrePlayers1"
        app:layout_constraintStart_toEndOf="@+id/player1PrePlayers2"
        app:layout_constraintTop_toTopOf="@+id/player1PrePlayers2"
        app:srcCompat="@drawable/ic_white_chip" />

    <ImageButton
        android:id="@+id/randomPlayer2PrePlayers2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="#80000000"
        android:contentDescription="@string/clear"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/whitePlayer2PrePlayers2"
        app:layout_constraintEnd_toStartOf="@id/blackPlayer2PrePlayers2"
        app:layout_constraintStart_toEndOf="@+id/whitePlayer2PrePlayers2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_random_chip" />

    <ImageButton
        android:id="@+id/randomPlayer1PrePlayers1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="#80000000"
        android:contentDescription="@string/clear"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/whitePlayer1PrePlayers2"
        app:layout_constraintEnd_toStartOf="@id/blackPlayer1PrePlayers2"
        app:layout_constraintStart_toEndOf="@+id/whitePlayer1PrePlayers2"
        app:layout_constraintTop_toTopOf="@+id/whitePlayer1PrePlayers2"
        app:srcCompat="@drawable/ic_random_chip" />

    <ImageButton
        android:id="@+id/blackPlayer2PrePlayers2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00000000"
        android:contentDescription="@string/clear"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/randomPlayer2PrePlayers2"
        app:layout_constraintEnd_toEndOf="@+id/blackPlayer1PrePlayers2"
        app:layout_constraintStart_toEndOf="@+id/randomPlayer2PrePlayers2"
        app:layout_constraintTop_toTopOf="@+id/randomPlayer2PrePlayers2"
        app:srcCompat="@drawable/ic_black_chip" />

    <ImageButton
        android:id="@+id/blackPlayer1PrePlayers2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:background="#00000000"
        android:contentDescription="@string/clear"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/randomPlayer1PrePlayers1"
        app:layout_constraintEnd_toStartOf="@+id/startPrePlayers2"
        app:layout_constraintStart_toEndOf="@+id/randomPlayer1PrePlayers1"
        app:layout_constraintTop_toTopOf="@+id/randomPlayer1PrePlayers1"
        app:srcCompat="@drawable/ic_black_chip" />
</androidx.constraintlayout.widget.ConstraintLayout>